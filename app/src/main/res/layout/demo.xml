<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:text="Open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/openButton" android:onClick="onOpenClick"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text=""
            android:hint="Filename"
            android:ems="10"
            android:id="@+id/nameEditText"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:text="This is the content"
            android:hint="Content"
            android:ems="10"
            android:id="@+id/contentEditText" android:layout_weight="1"/>
    <Button
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/saveButton" android:onClick="onSaveClick"/>
</LinearLayout>